<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg" />

    <ImageButton
        android:id="@+id/account_menu_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/menu" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="374dp"
        android:layout_height="363dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.394"
        app:srcCompat="@drawable/bg_account" />

    <ImageView
        android:id="@+id/account_photo"
        android:layout_width="153dp"
        android:layout_height="164dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.095"
        app:srcCompat="@drawable/user_ic" />

    <ImageButton
        android:id="@+id/exit_account_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:srcCompat="@drawable/empty_btn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Вийти"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/exit_account_btn"
        app:layout_constraintEnd_toEndOf="@+id/exit_account_btn"
        app:layout_constraintStart_toStartOf="@+id/exit_account_btn"
        app:layout_constraintTop_toTopOf="@+id/exit_account_btn" />

    <TextView
        android:id="@+id/name_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Імʼя"
        android:textAlignment="textStart"
        android:textColor="#FFFDFD"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/exit_account_btn"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toEndOf="@+id/account_photo"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.128" />

    <TextView
        android:id="@+id/last_name_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Прізвище"
        android:textAlignment="textStart"
        android:textColor="#FFFDFD"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/exit_account_btn"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toEndOf="@+id/account_photo"
        app:layout_constraintTop_toBottomOf="@+id/name_account"
        app:layout_constraintVertical_bias="0.061" />

    <TextView
        android:id="@+id/mail_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Пошта"
        android:textAlignment="textStart"
        android:textColor="#FFFDFD"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/exit_account_btn"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.254"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/last_name_account"
        app:layout_constraintVertical_bias="0.628" />

    <ImageView
        android:id="@+id/bg_menu"
        android:layout_width="553dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/sea" />

    <ImageButton
        android:id="@+id/close_menu_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/account_menu_btn"
        app:layout_constraintEnd_toEndOf="@+id/account_menu_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/account_menu_btn"
        app:layout_constraintTop_toTopOf="@+id/account_menu_btn"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/close" />

    <ImageButton
        android:id="@+id/acc_btn"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:layout_marginBottom="300dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.983"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_menu_btn"
        app:layout_constraintVertical_bias="0.045"
        app:srcCompat="@drawable/empty_btn" />

    <TextView
        android:id="@+id/acc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Акаунт"
        android:textColor="#040000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/acc_btn"
        app:layout_constraintEnd_toEndOf="@+id/acc_btn"
        app:layout_constraintStart_toStartOf="@+id/acc_btn"
        app:layout_constraintTop_toTopOf="@+id/acc_btn" />

    <ImageButton
        android:id="@+id/search_fly_btn"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.983"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acc_btn"
        app:layout_constraintVertical_bias="0.038"
        app:srcCompat="@drawable/empty_btn" />

    <TextView
        android:id="@+id/search_fly_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Пошук рейсів"
        android:textColor="#040000"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/search_fly_btn"
        app:layout_constraintEnd_toEndOf="@+id/search_fly_btn"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/search_fly_btn"
        app:layout_constraintTop_toTopOf="@+id/search_fly_btn" />

    <ImageButton
        android:id="@+id/settings_btn"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.983"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_fly_btn"
        app:layout_constraintVertical_bias="0.04"
        app:srcCompat="@drawable/empty_btn" />

    <TextView
        android:id="@+id/settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Налаштування"
        android:textColor="#040000"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/settings_btn"
        app:layout_constraintEnd_toEndOf="@+id/settings_btn"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/settings_btn"
        app:layout_constraintTop_toTopOf="@+id/settings_btn" />

    <ImageButton
        android:id="@+id/choose_air_btn"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_btn"
        app:layout_constraintVertical_bias="0.075"
        app:srcCompat="@drawable/empty_btn" />

    <TextView
        android:id="@+id/choose_air_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Вибір аеропорту"
        android:textColor="#040000"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/choose_air_btn"
        app:layout_constraintEnd_toEndOf="@+id/choose_air_btn"
        app:layout_constraintStart_toStartOf="@+id/choose_air_btn"
        app:layout_constraintTop_toTopOf="@+id/choose_air_btn" />
    <ImageButton
        android:id="@+id/my_tickets_btn"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_air_btn"
        app:layout_constraintVertical_bias="0.157"
        app:srcCompat="@drawable/empty_btn" />

    <TextView
        android:id="@+id/my_tickets_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Мої квитки"
        android:textColor="#040000"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/my_tickets_btn"
        app:layout_constraintEnd_toEndOf="@+id/my_tickets_btn"
        app:layout_constraintStart_toStartOf="@+id/my_tickets_btn"
        app:layout_constraintTop_toTopOf="@+id/my_tickets_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>